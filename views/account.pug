                        .row
                            .col-lg-12.col-md-12.col-sm-12.col-xs-12
                                .form-group
                                    label.profile_details_text Current password:
                                    input.form-control(type='password', name='current_password', value='', required='')
                            .col-lg-12.col-md-12.col-sm-12.col-xs-12
                                .form-group
                                    label.profile_details_text New password: 
                                    input.form-control(type='password', name='new_password', value='', required='')
