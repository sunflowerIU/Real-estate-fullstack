                            .col-lg-12.col-md-12.col-sm-12.col-xs-12
                                .form-group
                                    label.profile_details_text Password confirm:
                                    input.form-control(type='password', name='password_confirm', value='', required='')
                        .row
                            .col-lg-12.col-md-12.col-sm-12.col-xs-12.submit
                                .form-group
                                    input.btn.btn-dark(type='submit', value='Submit')
                .col-lg-8.col-lg-offset-2.col-md-8.col-md-offset-2.col-sm-12.col-xs-12.edit_information
