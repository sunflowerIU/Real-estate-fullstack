    head
    body
        main.box
            .container
                .profile-pic
                    img#profile-image1(alt='User Pic', src='images/iu2.jpg', height='200', width='200')
                    input#profile-image-upload.hidden(type='file', onchange='')
                    div(style='color:#999;')  
